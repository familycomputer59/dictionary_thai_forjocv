<div class="panel panel-primary">
    <div class="panel-heading">リクエスト確認</div>
    <div class="panel-body">
    	<%= form_for @contact, :url => contact_thanks_path do |f| %>
    	<form>
    		<div class="form-group">
    			<label class="control-label">名前:</label>
    			<div><%= f.hidden_field :name %><%= @contact.name %></div>
    		</div>
    		<div class="form-group">
    			<label class="control-label">メールアドレス:</label>
    			<div><%= f.hidden_field :email %><%= @contact.email %></div>
			</div>
			<div class="form-group">
				<label class="control-label">リクエスト内容:</label>
				<div><%= f.hidden_field :message %><%= simple_format(@contact.message) %></div>
			</div>
			<div class="form-group">
					<%= f.submit '送信' %>
			</div>
		<% end %>
		</form>
	</div>
</div>