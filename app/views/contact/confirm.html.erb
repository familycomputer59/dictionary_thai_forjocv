<div class="panel panel-primary">
    <div class="panel-heading">リクエスト確認</div>
    <div class="panel-body">
<%= form_for @contact, :url => contact_thanks_path do |f| %>
<div class="form-horizontal">
    <div class="form-group">
							<div class=" col-xs-3">名前：</div>
							<div class=" col-xs-9"><%= f.hidden_field :name %><%= @contact.name %></div>
		</div>
		<div class="form-group">
							<div class=" col-xs-3">メールアドレス：</div>
							<div class=" col-xs-9"><%= f.hidden_field :email %><%= @contact.email %></div>
		</div>
		<div class="form-group">
							<div class=" col-xs-3">リクエスト内容：</div>
							<div class=" col-xs-9"><%= f.hidden_field :message %><%= simple_format(@contact.message) %></div>
		</div>
  </div>
 <%= f.submit '送信' %>
<% end %>
</div>
</div>